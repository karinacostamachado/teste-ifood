<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/search_view_container_margin">

    <androidx.cardview.widget.CardView
        android:id="@+id/movieCategory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_category_card_height"
        android:backgroundTint="@color/gray"
        app:cardCornerRadius="@dimen/movie_category_card_corner_radius"
        app:cardElevation="@dimen/movie_category_card_elevation"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_item_card_height"
        android:backgroundTint="@color/gray"
        app:cardCornerRadius="@dimen/movie_category_card_corner_radius"
        app:cardElevation="@dimen/movie_category_card_elevation"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieCategory" />

</androidx.constraintlayout.widget.ConstraintLayout>